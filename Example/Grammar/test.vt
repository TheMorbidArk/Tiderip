/* if for while */
// 仅支持在函数中使用
// 支持 return,break,continue
fun Fun_3(){
    // if-else =》 没有elif语句
    var x = 0
    if (x == 0){
        System.print("xxx")
    }else{
        System.print("ooo")
    }

    /* for */
    var arr = ["H","e","l","l","o"]
    // 1. for-each
    System.print("for-each:")
    for i (arr){
        System.print(i)
    }
    // 2. range
    System.print("index-range:")
    for i (0..4){
        System.print(arr[i])
    }

    /* while */
    var idx = 0
    System.print("While:")
    while(idx < 10){
        idx=idx+1
    }
    System.print(idx)

}
Fun_3()

